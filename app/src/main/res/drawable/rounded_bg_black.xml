<!-- res/drawable/edittext_outline.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Border layer -->
    <item>
        <shape android:shape="rectangle">
            <!-- Transparent background to ensure it's just the border -->
            <solid android:color="@android:color/transparent" />
            <!-- Set the stroke color to black for the border -->
            <stroke
                android:width="20dp"
                android:color="@android:color/black" />
            <!-- Corner radius for rounded corners of the border -->
            <corners android:radius="8dp" />
        </shape>
    </item>

    <!-- Inner background layer -->
    <item android:top="2dp" android:left="2dp" android:right="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <!-- White background inside the EditText -->
            <solid android:color="@android:color/white" />
            <!-- Corner radius for the inner layer -->
            <corners android:radius="8dp" />
        </shape>
    </item>
</layer-list>
